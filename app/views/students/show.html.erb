<div class='home-container' id='modal-background'>
  <div class='top-navbar'>
    <div class='burger-menu'>
      <%= image_tag( "bars-solid.svg", class: 'menu-icon') %>
      <%= button_to t('.log-out'), logout_path, method: :delete  %>
    </div>
    <div class="home-student">
      <div>
        <%= image_tag("house-solid.svg", class: 'home-icon')%>
      </div>
      <h1 class='student'><%= t('.student') %></h1>
    </div>
    <h1 class='username'> <%= current_user.first_name %> </h1>
  </div>
  <div class='bread-crum-nav'>
    <%= link_to t('.students'), students_path, class: 'student-links' %>
    <h1 class= 'student-links'> > </h1>
    <%= link_to "#{@student.full_name}", student_path(@student.id), class: 'student-links'  %>
  </div>
  <div class='show-container'>
    <aside left class='side-bar'>
    <section class='student-info vl'>
      <h1><%= @student.full_name %></h1>
      <div class='student-description'>
        <h2 class= "show-h2"><%= t('.student-data') %></h2>
        <h3><%= t('.birth_date')%></h3>
        <p><%= @student.birth_date %></p>
        <h3><%= t('.address')%></h3>
        <p><%= @student.address %></p>
        <h3><%= t('.grade')%></h3>
        <p><%= @student.grade %></p>
        <h3><%= t('.attendance')%></h3>
        <p><%= @student.attendance %></p>
        <h3><%= t('.favorite-subjects')%></h3>
        <p class= "school-subjects"><%= t('.subject1')%></p>
        <h3><%= t('.most-dificult-subject')%></h3>
        <p class= "school-subjects"><%= t('.subject2')%></p>
      </div>
      <div class='student-objectives'>
        <div class="obj-title">
          <h2><%= t('.objectives')%></h2>
          <div class="image">
            <%= image_tag 'plus-circle.png' %>
          </div>
        </div>
        <%=form_with url: students_path, scope: :student, method: :post do |form|%>
          <div class= "student-show-label"> 
            <%= form.check_box :alphabet %>
            <%= form.label :alphabet, t('.learn-alfabet')  %>
          </div>
          <div class= "student-show-label"> 
            <%= form.check_box :tables, class: 'remember-me'%>
            <%= form.label :tables, t('.learn-tables') %>
          </div>
        <%end%>
      </div>
    </section>
  </aside>
  <section class='comments-container'>
    <%= render partial: "post_comment"%>
    <%= render partial: "comment"%>
  </section>
</div>

