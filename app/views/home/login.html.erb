<div class="container">
    <div class='main-box'>
        <div class="navbar">
      <%= link_to t('.login'), '#', class: "link #{current_page?(root_url) ? 'link-active' : ''}" %>
      <%= link_to t('.registernav'), '/register', class: "link" %> 
      <hr id='line'>
    </div>
    <div class='section'>
      <div class='globe-photo'>
      </div>
      <div>
        <h1 class='title'><%= t('.title') %></h1>
        <%= form_with  do |form| %>
          <div class='login-form'>
            <div class="item">
              <%= form.label :email,t('.email'), class: 'label-form' %>
              <%= form.text_field :email, class: 'input-form', placeholder: 'admin@admin.com' %>
            </div>
            <div class="item">
              <%= form.label :password,t('.password'),  class: 'label-form'%>
              <%= form.password_field :password, class: 'input-form' %>
            </div>
            <div class='remember-me'>
              <%= form.check_box :remember_me, class: 'remember-me' %>
              <%= form.label :remember_me, t('.remember-me'),  class: 'remember-me-label' %>
            </div>
            <%= form.submit :value => t('.sign-in') , class: 'login-button'%> 
            <%= link_to t('.recover-password'),'/#', class:'recover-password' %> 
            <div class="login-google">
              <%= image_tag 'google.png'%>
              <%= link_to t('.google-login')%>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>