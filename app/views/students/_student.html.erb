<tr class='user'>
  
  <td class='name'> <%= link_to "#{student.full_name}", student_path(student.id), class: 'student-links'  %> </td>
  <td class='name'> <%= student.age %> </td>
  <td class='name'> <%= student.grade  %> </td>
  <td class='name'> <%= student.attendance  %> </td>
  <% if policy(student).update? %>
    <td> <%= link_to edit_student_path(student), data: { turbo_frame: 'modal' } do%>
      <div class="edit-icon">
      </div>
    <% end %> 
    </td>
  <% end %> 
  <td>
    <%= link_to student_delete_modal_path(student.id), data: { turbo_frame: 'modal' } do%>
      <div class="delete-icon">
      </div>
    <% end %>
  </td>
</tr>