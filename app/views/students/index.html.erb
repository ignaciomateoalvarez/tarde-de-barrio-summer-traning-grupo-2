<div class='home-container' id='modal-background'>
  <div class='top-navbar'>
    <div class='burger-menu'>
      <%= image_tag( "bars-solid.svg", class: 'menu-icon') %>
      <%= button_to t('.log-out'), logout_path, method: :delete  %>
    </div>
    <div class="home-student">
      <div>
        <%= image_tag("house-solid.svg", class: 'home-icon')%>
      </div>
      <h1 class='student'><%= t('.student') %></h1>
    </div>
    <h1 class='username'> <%= current_user.first_name %> </h1>
  </div>
  <div class="search-bar">
    <div class='button-filter'>
      <%= form_with(url: students_path, method: :get, scope: :user_filter) do |f| %> 
      <%= f.text_field :full_name , class: "filter"%>
      <% end %> 
    </div>
    <div class="lupa-icon">
      <%= image_submit_tag("magnifying-glass-solid.svg")%>
    </div>
    <%= link_to new_student_path, data: { turbo_frame: 'modal' } do%>
      <div class="create-user">  
        <div class="user-icon"></div>
          <p class= "button-new"><%=t('.new_student')%></p>
          <div class="button-new">
          </div>
      </div>
    <% end %>
  </div> 
  <table class= 'user-container'>
    <thead>
      <tr class='user-th'>
        <th> <%= t('.students')%> </th> 
        <th> <%= t('.age') %> </th>
        <th> <%= t('.school_grade') %> </th>
        <th> <%= t('.attendance') %> </th>
        <th> <%= t('.edit') %> </th>
        <th> <%= t('.delete') %> </th>
      <tr>
    </thead>
    <tbody>
      <tr>
        <td colspan="2">
          <%= render partial: "student", collection: @presenter.students %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class='pagination-var'>
    <%== pagy_nav(@presenter.pagynate) %>
  </div>
</div>
