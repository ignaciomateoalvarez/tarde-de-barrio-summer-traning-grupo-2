<div class='home-container'>
  <div class='top-navbar'>
    <div>
      <%= image_tag( "bars-solid.svg", class: 'menu-icon') %>
      <%= render partial: '/errors/errors' %>
      <%= button_to t('.log-out'), logout_path, method: :delete  %>
    </div>
    
    <div class="home-student">
      <div>
        <%= image_tag("house-solid.svg", class: 'home-icon')%>
      </div>
      <div >
        <h1> Estudiante</h1>
      </div>
    </div>
    <div>
      <h1 class='username'> 
        <%= current_user.first_name %> 
      </h1>
    </div>
  </div>

  <div class="under-navbar">
    <div class='button-filter'>
      <%= form_with(url: users_path, method: :get, scope: :user_filter) do |f| %> 
        <%= f.text_field :full_name , class: "buscador"%>
        <div class="lupa-icon">
          <%= image_submit_tag("magnifying-glass-solid.svg")%>
        </div>
      <% end %> 
    </div>
    <div class="create-user">  
      <div class="user-icon"></div>
      <div>
        <%= link_to 'Nuevo usuario', new_user_path, data: { turbo_frame: 'modal' }%>
      </div>
    </div>
  </div> 

  <table class= 'user-container'>
    <thead>
      <tr class='user-th'>
        <th> <%= t('.students')%> </th> 
        <th> <%= t('.email')%> </th>
        <th> <%= 'ACTIVAR' %> </th>
        <th> <%= 'EDITAR' %> </th>
      <tr>
    </thead>
    <tbody>
      <tr>
        <td colspan="2">
          <% @users.each do |user| %>
            <tr class='user'>
              <td class='name'> <%= user.first_name %> <%= user.last_name %> </td>
              <td class='email-users'> <%= user.email %> </td>
              <%# Activate switch %>  
              <td class='toggle-button'>
                <%= link_to "#{user.active? ? 'Disable' : 'Enable'}", user_toggle_active_path(user), data: { turbo_method: 'put' } %>
                <input type="checkbox" id=<%= user.id %> />
                <label for=<%= user.id %>>Toggle</label>
              </td>
              <td ><%= link_to edit_user_path(user), data: { turbo_frame: 'modal' } do%>
                <div class="edit-icon">
                </div>
              <% end %> 
              </td>
              <td>
                <div class="delete-icon"></div>
              </td>
              <td>
                <div class="menu-modal-icon"></div>
              </td>
            </tr>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class='pagination-var'>
    <%== pagy_nav(@pagy) %>
  </div>
</div>